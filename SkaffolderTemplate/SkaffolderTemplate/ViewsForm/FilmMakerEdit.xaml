<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkaffolderTemplate.ViewsForm.FilmMakerEdit">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="FILM MAKER EDIT" AbsoluteLayout.LayoutBounds="0.5,10" AbsoluteLayout.LayoutFlags="XProportional"/>
            <StackLayout AbsoluteLayout.LayoutBounds="0.2,0.3, 0.9,0.5" AbsoluteLayout.LayoutFlags="All" Margin="0,0,-25,0">
                <Entry Placeholder="Name*" Text="{Binding Name, Mode=TwoWay}" Unfocused="FilmMakerNameEntry_Unfocused" Keyboard="Text" />
                <Entry Placeholder="Surname" Text="{Binding Surname, Mode=TwoWay}" Unfocused="FilmMakerSurnameEntry_Unfocused" Keyboard="Text" Margin="0,5,0,0"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" AbsoluteLayout.LayoutBounds="1,0.5,1,40" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" HorizontalOptions="End" Margin="0,0,10,0">
                <Button Text="Back To List" Command="{Binding Back}" BackgroundColor="White" TextColor="Black" BorderWidth="1"/>
                <Button Text="Save" Command="{Binding Save}" BackgroundColor="LightBlue" TextColor="White" BorderWidth="1" Margin="10,0,0,0" />
            </StackLayout>
        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>