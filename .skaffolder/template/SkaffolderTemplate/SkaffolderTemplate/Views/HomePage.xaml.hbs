<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkaffolderTemplate.Views.HomePage"
             Title="Home">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="stackLayout" TargetType="StackLayout">
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="label" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="boxview" TargetType="BoxView">
                <Setter Property="WidthRequest" Value="200"/>
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="Color" Value="Gray"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Spacing="40" Margin="0,30,0,0">
            {{#each resources.0._resources}}
            <StackLayout Style="{StaticResource stackLayout}" {{#equal name "User"}}x:Name="UserLabel"{{/equal}}>
                <Label Text="{{capitalize name}}" Style="{StaticResource label}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ChangePage"/>
                    </Label.GestureRecognizers>
                </Label>
                <BoxView Style="{StaticResource boxview}"/>
            </StackLayout>
            {{/each}}
        </StackLayout>
    </ContentPage.Content>
</ContentPage>